{% include 'components/header.html' %}
{% for post in collections.pluginPosts %}
    <h2>{{ post.data.title }}</h2>

    {% excerpt post %}
    
{% endfor %}



{{ content | safe }}




{% if sortField %}
    <h3>Related posts</h3>
    {% for post in collections.pluginPosts | related("sortField", sortField, 1) %}
        {{ post.data.title }}
    {% endfor %}
{% else %}
    <h3>Limited Posts</h3>
    {% for post in collections.pluginPosts | limit(2) %}
        <li>{{ post.data.title }}</li>
    {% endfor %}
{% endif %}

</body>
</html>